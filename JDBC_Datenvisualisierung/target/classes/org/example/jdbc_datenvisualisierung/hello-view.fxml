<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.jdbc_datenvisualisierung.HelloController">

  <top>
    <VBox spacing="8" BorderPane.alignment="CENTER">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
      </padding>

      <HBox spacing="10">
        <Label text="Kontinent:"/>
        <ComboBox fx:id="cbContinent" prefWidth="220"/>
      </HBox>

      <HBox spacing="12">
        <Label text="Sortierung:"/>
        <RadioButton fx:id="rbAsc" text="Aufsteigend"/>
        <RadioButton fx:id="rbDesc" text="Absteigend"/>
      </HBox>
    </VBox>
  </top>

  <left>
    <ScrollPane fitToWidth="true" prefWidth="250">
      <content>
        <VBox fx:id="vbContinentRadios" spacing="6">
          <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
          </padding>
        </VBox>
      </content>
    </ScrollPane>
  </left>

  <center>
    <BarChart fx:id="barChart" legendVisible="false" prefHeight="750">
      <padding>
        <Insets top="10" right="10" bottom="60" left="10"/>
      </padding>
      <xAxis>
        <CategoryAxis label="Region"/>
      </xAxis>
      <yAxis>
        <NumberAxis label="Durchschnittliche Lebenserwartung"/>
      </yAxis>
    </BarChart>
  </center>


</BorderPane>
